@model WebProject.Models.Personal

@{
    ViewData["Title"] = "Edit Personal Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        nav {
            background-color: #333;
            color: white;
            padding: 10px;
        }

        nav ul {
            list-style: none;
            padding: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 10px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
        }

        .container {
            padding: 20px;
        }

        .edit-form {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 20px auto;
        }

        .edit-form h3 {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .form-group input:focus {
            border-color: #333;
        }

        .actions {
            margin-top: 20px;
            text-align: center;
        }

        .actions button {
            padding: 8px 12px;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .actions button:hover {
            background-color: #555;
        }

        .actions a {
            padding: 8px 12px;
            background-color: #777;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-left: 10px;
        }

        .actions a:hover {
            background-color: #555;
        }
    </style>
</head>
<body>

    <nav>
        <ul>
            <li class="active"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="active"><a href="@Url.Action("AdminDashboard", "Admin")">Admin</a></li>
            <li class="active"><a href="@Url.Action("Index", "Personal")">Personal</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="edit-form">
            <h3>Edit Personal Details</h3>

            <form method="post">
                <div class="form-group">
                    <label for="Ad">Name</label>
                    <input type="text" id="Ad" name="Ad" value="@Model.Ad" required />
                </div>

                <div class="form-group">
                    <label for="Soyad">Surname</label>
                    <input type="text" id="Soyad" name="Soyad" value="@Model.Soyad" required />
                </div>

                <div class="form-group">
                    <label for="Uzmanlik">Specialization</label>
                    <input type="text" id="Uzmanlik" name="Uzmanlik" value="@Model.Uzmanlik" required />
                </div>

                <div class="form-group">
                    <label for="Earnings">Earnings</label>
                    <input type="number" step="0.01" id="Earnings" name="Earnings" value="@Model.Earnings" required />
                </div>

                <div class="actions">
                    <button type="submit">Save Changes</button>
                    <a href="@Url.Action("GetOnePersonal", "Personal", new { id = Model.PersonalID })">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
