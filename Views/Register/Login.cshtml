@model WebProject.Models.User


<h2>Login</h2>

@if (TempData["msj"] != null)
{
    <div class="text-danger">@TempData["msj"]</div>
}

<form asp-action="Logging" method="post">
    <div>
        <label for="Email">Email:</label>
        <input asp-for="Email" type="email" name="Email" value="@Model?.Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label for="Password">Password:</label>
        <input asp-for="Password" type="password" name="Password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>

<!-- Signup link -->
<div>
    <p>Don't have an account? <a asp-action="Signup">Sign up here</a>.</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
