@model IEnumerable<WebProject.Models.Service>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Services</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-4">
    <h1 class="my-4 text-center">Services</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("Create", "Service")" class="btn btn-primary">Add New Service</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ServiceId</td>
                    <td>@service.Name</td>
                    <td>@service.Description</td>
                    <td>@service.Duration</td>
                    <td>@service.Price.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Service", new { id = service.ServiceId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Service", new { id = service.ServiceId })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap JS (optional, for some functionalities) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
