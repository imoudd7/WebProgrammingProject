@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Barber Shop";
    Layout = null; // Disable default layout
}

<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Barber Shop - AI Haircut</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <header>
        <!-- Header Start -->
        <div class="header-area header-transparent">
            <div class="main-header header-sticky">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <!-- Logo -->
                        <div class="col-xl-2 col-lg-2 col-md-1">
                            <div class="logo">
                            </div>
                        </div>
                        <div class="col-xl-10 col-lg-10 col-md-10">
                            <div class="menu-main d-flex align-items-center justify-content-end">
                                <!-- Main-menu -->
                                <div class="main-menu f-right d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li class=""><a href="@Url.Action("Index", "Home")">Home</a></li>
                                            <li class=""><a href="@Url.Action("Index", "Service")">Services</a>
                                            </li>
                                            <li class=""><a href="@Url.Action("Index", "Appointment")">Appointment</a>
                                            </li>
                                            <li class=""><a href="@Url.Action("AdminDashboard", "Admin")">Admin</a></li>
                                            <li class=""><a href="@Url.Action("Index", "ImageAi")">Ai</a>
                                            </li>

                                            <li><a asp-Area="Identity" asp-page="/Account/Register">Sign up </a></li>
                                            <li><a asp-Area="Identity" asp-page="/Account/Logout">Log out </a></li>

                                        </ul>
                                    </nav>
                                </div>
                                <div class="header-right-btn f-right d-none d-lg-block ml-30">
                                    <a asp-area="Identity" asp-page="/Account/Login" class="btn header-btn">Login</a>
                                </div>
                            </div>
                        </div>
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>

    <main>
        <!-- Hero Start -->
        <div class="slider-area2">
            <div class="slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap hero-cap2 pt-70 text-center">
                                <h2>AI Haircut</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>

        <!-- Main Content Section -->
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    @* Form and Result Section *@
                    @{
                        ViewData["Title"] = "Hair Style Suggestion";
                        var hairStyles = ViewBag.HairStyles as Dictionary<int, string>;
                    }

                    <h1 class="text-center mb-4">Hair Style Suggestion</h1>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @if (ViewBag.ProcessedImage != null)
                    {
                        <!-- Result Section -->
                        <div class="text-center">
                            <h3>Processed Image:</h3>
                            <img src="@ViewBag.ProcessedImage" alt="Processed Image" class="img-fluid mt-3" />
                            <a href="@Url.Action("ProcessImage", "ImageAi")" class="btn btn-primary mt-3">Upload a New
                                Image</a>
                        </div>
                    }
                    else
                    {
                        <!-- Form Section -->
                        <form asp-action="ProcessImage" method="post" enctype="multipart/form-data" class="mt-4">
                            <div class="form-group">
                                <label for="uploadedImage">Upload a Photo:</label>
                                <input type="file" id="uploadedImage" name="uploadedImage" accept="image/*"
                                    class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="style">Select a Hair Style:</label>
                                <select id="style" name="style" class="form-control" required>
                                    <option value="" disabled selected>Select a hair style</option>
                                    @foreach (var style in hairStyles)
                                    {
                                        <option value="@style.Key">@style.Value</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success btn-block mt-3">Submit</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
    <footer>
        <div class="footer-area section-bg" data-background="~/img/gallery/footer_bg.png">
            <div class="container">
                <div class="footer-top footer-padding">
                    <div class="row d-flex justify-content-between">
                        <div class="col-xl-3 col-lg-4 col-md-5 col-sm-8">
                            <div class="single-footer-caption mb-50">
                                <!-- Logo -->
                                <div class="footer-logo">
                                    <a href="@Url.Action("Index", "Home")"><img src="~/img/logo/logo2_footer.png"
                                            alt="Footer Logo"></a>
                                </div>
                                <div class="footer-tittle">
                                    <div class="footer-pera">
                                        <p class="info1">Receive updates and latest news direct from Simply enter.</p>
                                    </div>
                                </div>
                                <div class="footer-number">
                                    <h4><span>+564 </span>7885 3222</h4>
                                    <p>barber@gmail.com</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2 col-md-3 col-sm-5">
                            <div class="single-footer-caption mb-50">
                                <div class="footer-tittle">
                                    <h4>Location</h4>
                                    <ul>
                                        <li><a href="#">Advanced</a></li>
                                        <li><a href="#">Management</a></li>
                                        <li><a href="#">Corporate</a></li>
                                        <li><a href="#">Customer</a></li>
                                        <li><a href="#">Information</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2 col-md-3 col-sm-5">
                            <div class="single-footer-caption mb-50">
                                <div class="footer-tittle">
                                    <h4>Explore</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-8">
                            <div class="single-footer-caption mb-50">
                                <div class="footer-tittle">
                                    <h4>Subscribe</h4>
                                    <div class="footer-pera">
                                        <p class="info1">Subscribe now to get daily updates</p>
                                    </div>
                                </div>
                                <div class="footer-form">
                                    <form action="#" method="get" class="subscribe_form relative mail_part"
                                        novalidate="true">
                                        <input type="email" name="EMAIL" id="newsletter-form-email"
                                            placeholder="Email Address" class="placeholder hide-on-focus form-control">
                                        <button type="submit" class="btn btn-primary mt-2">Subscribe</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="row d-flex justify-content-between align-items-center">
                        <div class="col-xl-9 col-lg-8">
                            <div class="footer-copy-right">
                                <p>&copy;
                                    <script>document.write(new Date().getFullYear());</script> All rights reserved
                                </p>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-4">
                            <div class="footer-social f-right">
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fas fa-globe"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll Up -->
    <div id="back-top">
        <a title="Go to Top" href="#"> <i class="fas fa-level-up-alt"></i></a>
    </div>

    <!-- JavaScript -->
    <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
</body>

</html>